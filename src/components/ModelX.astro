---
import Section from "./Section.astro";
---

<Section
  title="Model X"
  subtitle="Explore inventory"
  color="black">
  <div slot="footer" class="flex gap-x-4 mx-auto">
    <a
      class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded text-white font-medium px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="#">Custom Order</a
    >
    <a
      class="bg-white text-sm rounded text-black font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center"
      href="#">Demo Drive</a
    >
  </div>
    <img
      slot="background"
      src="/model-x.avif"
      alt="Model Y"
      class="h-full w-full object-cover object-center"
    />
</Section>
